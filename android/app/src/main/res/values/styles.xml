<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Ganti parent theme ke yang kompatibel: AppCompat -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:statusBarColor">#ffffff</item>
  </style>

  <!-- Splash Screen Theme (disederhanakan) -->
  <style name="Theme.App.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/splashscreen_background</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <!-- Icon splash opsional -->
    <!-- <item name="android:windowContentOverlay">@drawable/splashscreen_logo</item> -->
  </style>
</resources>
